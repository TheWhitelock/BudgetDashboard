@page "/dashboard"
@attribute [Authorize]
@rendermode InteractiveServer

@using BudgetDashboard.Data
@using BudgetDashboard.Data.Entities
@using BudgetDashboard.Data.Extensions
@using BudgetDashboard.Web.Components.Components
@using BudgetDashboard.Web.Components.Shared
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Authorization
@inject BudgetContext Db
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager

<PageTitle>Dashboard</PageTitle>

@if (_budgets is null)
{
    <p><em>Loading...</em></p>
}
else if (_budgets.Count == 0)
{
    <div class="alert alert-info">No budgets yet. Create one below.</div>
}

<div class="row">
    <div class="col-12 mb-3">
        <div class="card total-budget-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-column align-items-start gap-2">
                        <span>Total budgeted</span>
                        <h2 class="card-text mb-1">
                            â‚¬ @TotalAmount.ToString("N2")
                        </h2>
                    </div>
                    <button class="btn btn-primary d-flex align-items-center me-3 gap-2" @onclick="CreateBudget">
                        <i class="fas fa-plus"></i>
                        <span>Add</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @if (_budgets is not null)
    {
        @foreach (var budget in _budgets)
        {
            <div class="col-md-12 col-lg-6 col-xl-4 mb-3">
                <BudgetCard 
                    Budget="budget"
                    OnEdit="EditBudget" />
            </div>
        }
    }
</div>

<BudgetOffcanvas @ref="_budgetOffcanvas" OnSaved="ReloadBudgets" />

@code {
    private List<Budget>? _budgets;
    private BudgetOffcanvas? _budgetOffcanvas;

    private decimal TotalAmount
    {
        get
        {
            if (_budgets == null) return 0m;
            return _budgets.GetTotalAcrossAllBudgets();
        }
    }

    protected override async Task OnInitializedAsync() => await LoadBudgets();

    private async Task LoadBudgets()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user?.Identity is null || !user.Identity.IsAuthenticated)
        {
            _budgets = new();
            return;
        }

        var appUser = await UserManager.GetUserAsync(user);
        if (appUser is null)
        {
            _budgets = new();
            return;
        }

        var budgets = await Db.Budgets
            .Include(b => b.Items)
            .Where(b => b.UserId == appUser.Id)
            .ToListAsync();

        _budgets = budgets
            .OrderByDescending(b => b.Items?.Sum(i => i.EstimatedAmount) ?? 0m)
            .ToList();
    }


    private async Task CreateBudget()
    {
        if (_budgetOffcanvas is not null)
            await _budgetOffcanvas.ShowAsync(null);
    }

    private async Task EditBudget(Budget budget)
    {
        if (_budgetOffcanvas is not null)
            await _budgetOffcanvas.ShowAsync(budget);
    }

    private async Task ReloadBudgets()
    {
        await LoadBudgets();
        StateHasChanged();
    }
}
