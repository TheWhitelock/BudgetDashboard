@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using BudgetDashboard.Web.Constants

<div class="d-flex min-vh-100">
    <!-- Sidebar -->
    <nav class="d-flex flex-column flex-shrink-0 p-4 nav-menu">
        <a href="/" class="d-flex align-items-center mb-4 logo">
            <i class="fas fa-chart-pie me-2"></i>
            <span class="fs-5 fw-semibold">Budget Dashboard</span>
        </a>
        <hr class="m-0" />
        <!-- Auth section -->
        <AuthorizeView>
            <Authorized>
                <div class="d-flex flex-column gap-2">
                    <small class="text-muted">Signed in as:</small>
                    <span class="fw-semibold">@context.User.Identity?.Name</span>
                    <button type="button" class="btn btn-outline-danger btn-sm w-100" onclick="window.performLogout()">
                        <i class="fas fa-sign-out-alt me-1"></i> Logout
                    </button>
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="d-flex flex-column gap-2">
                    <a class="btn btn-outline-primary btn-sm w-100" href="@RouteConstants.Account.LoginPath">
                        <i class="fas fa-sign-in-alt me-1"></i> Login
                    </a>
                    <a class="btn btn-outline-success btn-sm w-100" href="@RouteConstants.Account.RegisterPath">
                        <i class="fas fa-user-plus me-1"></i> Register
                    </a>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>

    <!-- Main content area -->
    <main class="flex-grow-1">
        <section class="p-5">    
            @Body
        </section>
    </main>
</div>
